pragma solidity ^0.8.18;

import {Test, console} from "forge-std/Test.sol";
import{MoodNft} from "../../src/MoodNft.sol";
import {DeployMoodNft} from "../../script/DeployMoodNft.s.sol";

contract MoodNftIntegrationTest is Test{
    DeployMoodNft public deployer;
    MoodNft public nft;
    address public USER = makeAddr("user");

    string public constant HAPPY_MOOD_URI =
        "";
    string public constant SAD_MOOD_URI =
        "data:application/jason;base64,";
    function setUp() public{
        deployer = new DeployMoodNft();
        nft = deployer.run();
    }

    function testView() public{
        vm.prank(USER);
        nft.mintNft();
        console.log(nft.tokenURI(0));
    }

    function testFlip() public{
        vm.prank(USER);
        nft.mintNft();

        vm.prank(USER);
        nft.flipMood(0);
        console.log(nft.tokenURI(0));
        assertEq(keccak256(abi.encodePacked(nft.tokenURI(0))), 
                    keccak256(abi.encodePacked((SAD_MOOD_URI))));
    }
}